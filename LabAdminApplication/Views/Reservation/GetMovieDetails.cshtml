@{
}
@model LabAdminApplication.Models.Reservation

<div class="container">
   
  
       @for (int i = 0; i < Model.Movies.ToList().Count; i++)
       {
           var item = Model.Movies[i].Movie;

           if(i % 3 == 0)
           {
               @:<div class="row">
           }

        <div class="col-md-3 m-4">
            <div class="card" style="width: 18rem; height: 30rem;">
                <img class="card-img-top" src="@item.MovieImage" style="height: 50%;" alt="Image for product!">

                <div class="card-body">
                    <h3 class="card-title">@item.MovieTitle</h3>
                    <p class="card-text">@item.MovieDescription</p>
                    <p class="card-text">@item.DateAndTime</p>
                    
                    <h6>Price: $@item.MoviePrice</h6> 
                </div>

               
            </div>
        </div>


           if(i % 3 == 2)
           {
               @:</div>
           }
       }
</div>
